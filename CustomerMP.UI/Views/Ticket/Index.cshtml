@{
}
@using CustomerMP.UI.Views.Models
@model List<TicketModel>
@{
    ViewBag.Title = "Bilet Listele";
    Layout = "~/Views/Shared/_LayoutNavbar.cshtml";

}
<head>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body style="background-color: #e0fbff;">
    <div class="pl-4 pt-4">
        <h3 class="bold">Biletler</h3>
        <table class="table">
            <thead class="bg-light">
                <tr class="border-1">
                    <th class="border-1">Bilet No</th>
                    <th class="border-1">Detay</th>
                    <th class="border-1">Yer</th>
                    <th class="border-1">Zaman</th>
                    <th class="border-1">Bilet Sahibi</th>
                    <th class="border-1"></th>
                    <th class="border-1"></th>


                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TicketNo</td>
                    <td>@item.Detail</td>
                    <td>@item.Location</td>
                    <td>@item.Time</td>
                    <td>@item.Customer.Name @item.Customer.Surname</td>
                    <td>
                        <a href="/Ticket/DeleteTicket/@item.Id"
                       class="btn btn-danger btn-sm"
                       onclick="return confirm('Silmek istediğine emin misin?');">
                            <i class="fas fa-trash-alt"></i> Sil
                        </a>
                    </td>

                    <td>
                        <a href="/Ticket/UpdateTicket/@item.Id"
                       class="btn btn-primary btn-sm">
                            <i class="fas fa-edit"></i> Güncelle
                        </a>
                    </td>





                </tr>
            }
        </table>
        <div class="text-left mt-3 mr-3">
            <a href="/Ticket/AddTicket" class="btn btn-success">Yeni Bilet Ekle</a>

        </div>


        <br />


    </div>
</body>