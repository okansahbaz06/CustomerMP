@using CustomerMP.UI.Views.Models
@model List<CustomerModel>
@{
    ViewBag.Title = "Müşteri Listele";
    Layout = "~/Views/Shared/_LayoutNavbar.cshtml";

}
<head>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body style="background-color: #e0fbff;">
    <div class="pl-4 pt-4">
        <h3 class="bold">Müşteriler</h3>
        <table class="table">
            <thead class="bg-light">
                <tr class="border-1">
                    <th class="border-1">Tc</th>
                    <th class="border-1">Ad</th>
                    <th class="border-1">Soyad</th>
                    <th class="border-1">E-Mail</th>
                    <th class="border-1">İş Telefonu</th>
                    <th class="border-1">Mobil Telefon</th>
                    <th class="border-1">Ev Adresi</th>
                    <th class="border-1">İş Adresi</th>
                    <th class="border-1">Sıradışı İsim mi?</th>
                    <th class="border-1"></th>
                    <th class="border-1"></th>


                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Tc</td>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td>@item.Email</td>
                    <td>@item.WorkPhoneNo</td>
                    <td>@item.MobilePhoneNo</td>
                    <td>@item.HomeAdress</td>
                    <td>@item.WorkAdress</td>
                    <td>@item.Siradisimi</td>
                    <td>
                        <a href="/Customer/DeleteCustomer/@item.Id"
                       class="btn btn-danger btn-sm"
                       onclick="return confirm('Silmek istediğine emin misin?');">
                            <i class="fas fa-trash-alt"></i> Sil
                        </a>
                    </td>

                    <td>
                        <a href="/Customer/UpdateCustomer/@item.Id"
                       class="btn btn-primary btn-sm">
                            <i class="fas fa-edit"></i> Güncelle
                        </a>
                    </td>




                </tr>
            }
        </table>
        <div class="text-left mt-3 mr-3">
            <a href="/Customer/AddCustomer" class="btn btn-success">Yeni Müşteri Ekle</a>
        </div>


        <br />


    </div>
</body>